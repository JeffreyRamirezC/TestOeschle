<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.OrdenTrabajoMaintenanceActivity"
    tools:showIn="@layout/app_bar_main">

      <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

            <ImageView
                android:id="@+id/save_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_save_edit" />
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_container" />

    <com.tvs.maintenance.util.ui.fab.FloatingActionMenu
        android:id="@+id/fab_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        fab:menu_backgroundColor="#ccffffff"
        fab:menu_fab_label="Nueva Orden de Trabajo"
        fab:menu_icon="@drawable/ic_ot_edit"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="true">

        <com.tvs.maintenance.util.ui.fab.FloatingActionButton
            android:id="@+id/fab_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_ot"
            fab:fab_label="Resumen"
            fab:fab_size="mini" />

        <com.tvs.maintenance.util.ui.fab.FloatingActionButton
            android:id="@+id/fab_info_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_info_client"
            fab:fab_label="Info Cliente"
            fab:fab_size="mini" />

        <com.tvs.maintenance.util.ui.fab.FloatingActionButton
            android:id="@+id/fab_info_vehiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_maitenance_icon_white"
            fab:fab_label="Info Vehiculos"
            fab:fab_size="mini" />

        <com.tvs.maintenance.util.ui.fab.FloatingActionButton
            android:id="@+id/fab_inspeccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_inspection"
            fab:fab_label="InspecciÃ³n"
            fab:fab_size="mini" />

        <com.tvs.maintenance.util.ui.fab.FloatingActionButton
            android:id="@+id/fab_trabajos_realizados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tools"
            fab:fab_label="Trabajos Realizados"
            fab:fab_size="mini" />

        <com.tvs.maintenance.util.ui.fab.FloatingActionButton
            android:id="@+id/fab_repuestos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_refill"
            fab:fab_label="Repuestos"
            fab:fab_size="mini" />

        <com.tvs.maintenance.util.ui.fab.FloatingActionButton
            android:id="@+id/fab_cotizaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bill"
            fab:fab_label="Cotizaciones"
            fab:fab_size="mini" />

    </com.tvs.maintenance.util.ui.fab.FloatingActionMenu>
</RelativeLayout>